    padding-top:20px;
    padding-bottom:20px;
}
.expandable-panel-content p:last-child {
    padding-bottom:15px;    
}
.icon-close-open {
    width:20px;
    height:20px;
    position:absolute;
    background-image:url(icon-close-open.png);
    right:15px;
}
